# Staging Environment Configuration
# This file is used as a template for staging environment variables

# Supabase Configuration - Staging
NEXT_PUBLIC_SUPABASE_URL=your_staging_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_staging_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_staging_supabase_service_role_key_here

# Colombian Configuration
COLOMBIA_TIMEZONE=America/Bogota
COLOMBIA_CURRENCY=COP
COLOMBIA_PHONE_PREFIX=+57

# Environment Info
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=staging
NEXT_PUBLIC_APP_VERSION=1.0.0

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://your-staging-domain.vercel.app
API_TIMEOUT=15000

# Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_TEST_DATA=false

# Logging
LOG_LEVEL=info

# Security
NEXTAUTH_SECRET=your_staging_nextauth_secret_here
NEXTAUTH_URL=https://your-staging-domain.vercel.app